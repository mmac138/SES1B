<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="group6.seshealthpatient.Activities.RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextColor="@color/whiteColor"
        />

    <!-- FullName Text Field -->
    <TextView
        android:id="@+id/reg_fullnameTV"
        style="@style/RegisterStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_toolbar"
        android:layout_marginStart="19dp"
        android:layout_marginTop="50dp"
        android:text="@string/fullname_txt" />

    <EditText
        android:id="@+id/reg_full_nameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reg_fullnameTV"
        android:layout_alignBottom="@+id/reg_fullnameTV"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/reg_fullnameTV"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/reg_genderTV"
        style="@style/RegisterStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reg_fullnameTV"
        android:layout_below="@+id/reg_full_nameET"
        android:layout_marginTop="25dp"
        android:text="Gender" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reg_genderTV"
        android:layout_alignStart="@+id/reg_full_nameET"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/reg_maleRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reg_femaleRB"
            android:layout_alignBottom="@+id/reg_femaleRB"
            android:layout_alignStart="@+id/reg_full_nameET"
            android:checked="false"
            android:text="Male" />

        <RadioButton
            android:id="@+id/reg_femaleRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reg_genderTV"
            android:layout_alignBottom="@+id/reg_genderTV"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/reg_maleRB"
            android:text="Female" />

    </RadioGroup>

    <TextView
        android:id="@+id/reg_dobTV"
        style="@style/RegisterStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reg_genderTV"
        android:layout_below="@+id/reg_genderTV"
        android:layout_marginTop="32dp"
        android:text="Date of Birth" />

    <EditText
        android:id="@+id/reg_dobET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/registerBtn"
        android:layout_alignTop="@+id/reg_dobTV"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/reg_heightTV"
        style="@style/RegisterStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reg_dobTV"
        android:layout_below="@+id/reg_dobET"
        android:layout_marginTop="27dp"
        android:text="Height (cm)" />

    <EditText
        android:id="@+id/reg_heightET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reg_heightTV"
        android:layout_alignBottom="@+id/reg_heightTV"
        android:layout_alignStart="@+id/reg_dobET"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/reg_weightTV"
        style="@style/RegisterStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reg_heightTV"
        android:layout_below="@+id/reg_heightET"
        android:layout_marginTop="29dp"
        android:text="Weight (kg)" />

    <EditText
        android:id="@+id/reg_weightET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reg_heightET"
        android:layout_alignTop="@+id/reg_weightTV"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/reg_medicalInfoTV"
        style="@style/RegisterStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reg_weightTV"
        android:layout_below="@+id/reg_weightET"
        android:layout_marginTop="18dp"
        android:text="Medical Info" />

    <EditText
        android:id="@+id/reg_medicalInfoET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reg_medicalInfoTV"
        android:layout_alignBottom="@+id/reg_medicalInfoTV"
        android:layout_alignStart="@+id/reg_weightET"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="Register" />


    <!-- FullName edit text -->

    <!-- UserName Text Field -->

    <!-- UserName edit text -->

    <!-- Password Text View -->

    <!-- Password Edit Text -->

    <!-- Register Button -->


</RelativeLayout>
